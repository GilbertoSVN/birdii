{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "outDir": "./dist",
    "removeComments": true,
    "baseUrl": "src",
    "paths": {
      "~/": [""],
      "~/test/": ["../test/"],
    },
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src", "test"]
}